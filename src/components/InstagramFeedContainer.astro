---
interface InstagramPost {
    permalink: string;
    embedVersion?: string;
}

const instagramPosts: InstagramPost[] = [
    { permalink: "https://www.instagram.com/p/DGleW6CS30F/" },
    { permalink: "https://www.instagram.com/p/DGgjdGzB3Y5/" },
    { permalink: "https://www.instagram.com/p/DFODdlsTfWr/" },
    { permalink: "https://www.instagram.com/p/DHB_OahT8QY/" },
    { permalink: "https://www.instagram.com/reel/DHB14gKx7bT/" },
    { permalink: "https://www.instagram.com/reel/DG_ebwLRb_o/" }
];
---
<section id="instagram-section" class="fade-in">
    <div class="instagram-container">
        <div class="section-header">
            <h2>SÃ­guenos en Instagram</h2>
        </div>
        <div class="instagram-grid">
            {instagramPosts.map((post) => (
                <div class="instagram-card instagram-embed">
                    <blockquote 
                        class="instagram-media" 
                        data-instgrm-captioned 
                        data-instgrm-permalink={`${post.permalink}?utm_source=ig_embed&amp;utm_campaign=loading`}
                        data-instgrm-version={post.embedVersion || "14"}
                        style="background:#FFF; border:0; border-radius:3px; box-shadow:0 0 1px 0 rgba(0,0,0,0.5),0 1px 10px 0 rgba(0,0,0,0.15); margin: 1px; max-width:540px; min-width:326px; padding:0; width:99.375%; width:-webkit-calc(100% - 2px); width:calc(100% - 2px);"
                    >
                        <div style="padding:16px;">
                            <a 
                                href={`${post.permalink}?utm_source=ig_embed&amp;utm_campaign=loading`} 
                                style="background:#FFFFFF; line-height:0; padding:0 0; text-align:center; text-decoration:none; width:100%;" 
                                target="_blank"
                            >
                                <div style="display: flex; flex-direction: row; align-items: center;">
                                    <div style="background-color: #F4F4F4; border-radius: 50%; flex-grow: 0; height: 40px; margin-right: 14px; width: 40px;"></div>
                                    <div style="display: flex; flex-direction: column; flex-grow: 1; justify-content: center;">
                                        <div style="background-color: #F4F4F4; border-radius: 4px; flex-grow: 0; height: 14px; margin-bottom: 6px; width: 100px;"></div>
                                        <div style="background-color: #F4F4F4; border-radius: 4px; flex-grow: 0; height: 14px; width: 60px;"></div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </blockquote>
                </div>
            ))}
        </div>
        <div class="instagram-cta">
            <a href="https://www.instagram.com/ganacmx/" target="_blank" class="d_button">
                Visita nuestro Instagram
            </a>
        </div>
        <script async src="//www.instagram.com/embed.js"></script>
    </div>
</section>