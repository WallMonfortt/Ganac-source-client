---
import Image from "astro/components/Image.astro";
import image1 from "../assets/image1.webp";
import image2 from "../assets/image2.webp";
import image3 from "../assets/image3.webp";
import image4 from "../assets/image4.webp";
const images = [image1, image2, image3, image4];
---

<section id="inicio" class="fade-in">
  <div class="carousel">
    <div class="carousel-inner">
      {
        images.map((image) => (
          <div class="carousel-item">
            <Image src={image} alt="image1" loading="lazy" />
          </div>
        ))
      }
    </div>
    <div class="carousel-controls">
      <button class="control" id="prevBtn">&#10094;</button>
      <button class="control" id="nextBtn">&#10095;</button>
    </div>

    <div class="home-title">
      <h1>SOÑAMOS CON LA CURA DEL CÁNCER INFANTIL</h1>
    </div>
    <div class="additional-buttons">
      <button class="extra-button" id="donate-monthly">
        Ángel de Esperanza <br /> (Aportación mensual)</button
      >
      <button class="extra-button" id="donate-now"
        >Donar ahora <br /> (Aportación única)</button
      >
    </div>
  </div>
</section>
