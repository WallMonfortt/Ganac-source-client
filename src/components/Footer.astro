<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const logos = document.querySelectorAll('.certifications-logos img');
    let currentLogoIndex = 0;

    function cycleLogos() {
      // Remove active state from all logos
      logos.forEach(logo => {
        logo.classList.remove('logo-active');
        // logo.style.filter = 'grayscale(100%)';
        logo.style.transform = 'scale(1)';
      });

      // Activate current logo
      const currentLogo = logos[currentLogoIndex];
      currentLogo.classList.add('logo-active');
      currentLogo.style.filter = 'grayscale(0%)';
      currentLogo.style.transform = 'scale(1.4)';

      // Move to next logo
      currentLogoIndex = (currentLogoIndex + 1) % logos.length;
    }

    // Initial cycle
    cycleLogos();

    // Set interval to cycle logos every 2 seconds
    setInterval(cycleLogos, 1500);
  });
</script>